<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    </PropertyGroup>
    
    <!-- This can be removed once Staiq.Docs #50 is implemented and released -->
    <ItemGroup>
        <Compile Remove="theme\**" />
        <Compile Remove="extensions\**" />
        <Compile Remove="archetypes\**" />
    </ItemGroup>    
    <ItemGroup>
        <None Include="theme\**">
            <CopyToOutputDirectory>Never</CopyToOutputDirectory>
        </None>
        <None Include="extensions\**">
            <CopyToOutputDirectory>Never</CopyToOutputDirectory>
        </None>
        <None Include="archetypes\**">
            <CopyToOutputDirectory>Never</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Statiq.Docs" Version="1.0.0-beta.3" />
    </ItemGroup>

</Project>
